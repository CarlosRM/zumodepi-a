<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pr_idi.mydatabaseexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecyclerViewActivity"
                android:launchMode="singleTask"/>

        <activity android:name=".InsertFilmActivity"
                android:launchMode="singleTask"/>
        <activity
            android:name=".SearchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".Predictor"
            android:authorities="com.example.pr_idi.mydatabaseexample.provider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".PruevaNavigation"
            android:label="@string/title_activity_prueva_navigation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>