<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pr_idi.mydatabaseexample.HelpActivity"
    android:orientation="vertical">



    <TextView
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Film Viewer, the best movie app in the market right now! Here are a few tips to help you get familiar with all the options Film Viewer offers:"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App menu"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.9"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_action_name"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe right or click on the top left icon to open the App Menu and choose one from the many options you have available."/>
    </LinearLayout>

    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_action_name"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe right to open the Navigation Drawer and choose one from the many options you have available."/>
    </LinearLayout-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advanced Search"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.9"
        android:background="@android:color/black" />

    <ImageView
        android:paddingTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/searchbar_screenshot"
        android:alpha="0.8"/>
    <TextView
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use the search box on top of the Advanced View to search for any film you want! You can use the two dropdown lists on top of it to select the type of search (by Title, by Protagonist...) and to order the results the way you prefer!"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a new film"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.9"
        android:background="@android:color/black" />

    <TextView
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="After you select 'Add Film' on the App Menu, you'll be able to add a new film to the database. You must input all the information about it and use the spinners to select both the country and the year. Also, you'll have to provide a rating for that film."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify rating and delete films"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.9"
        android:background="@android:color/black" />

    <ImageView
        android:paddingTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/popupmenu2"
        android:alpha="0.8"/>

    <TextView
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap on the icon on the top right corner of each film in the Advanced View to open a popup menu, where you can select to either modify the rating of said film, or delete it."/>
</LinearLayout>
</ScrollView>
